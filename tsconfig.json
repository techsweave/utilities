{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "moduleResolution": "Node",
        "module": "commonJS",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "rootDir": "./"
    },
    "include": [
        "libs/*.ts",
        "schema/*.ts",
        "index.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ]
}