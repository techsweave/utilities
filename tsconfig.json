{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "moduleResolution": "node",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2020",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "libs/*.ts",
        "schema/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
    },
    "declaration": true
}