{
    "extends": "./tsconfig.paths.json",
    "compilerOptions": {
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "moduleResolution": "Node",
        "module": "esnext",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES6",
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "libs/*.ts",
        "schema/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "dist"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ],
    },
    "declaration": true
}